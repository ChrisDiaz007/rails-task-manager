<h2>My tasks</h2>
<div>
  <% @tasks.each do |task| %>
    <p class="d-flex">
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", delete_task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </p>
  <% end %>
</div>

<p><%= link_to "+ Add a new task", new_task_path%></p>
